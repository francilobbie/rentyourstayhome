<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <img class="mx-auto h-40 w-auto" src="https://res.cloudinary.com/dge8yully/image/upload/v1696246668/Sans_titre-1_qmov1v.png" alt="Your Company">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Log in</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, "Password", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="text-sm">
            <%= link_to "Forgot password?", new_user_password_path, class: "font-semibold text-black-600 hover:text-black-500" %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" %>
        </div>
        <div>
          <% if devise_mapping.rememberable? %>
            <div class="mt-2 mb-8 flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 border-gray-300 rounded-md shadow-sm text-black-600 focus:ring-black" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.submit "Login", class: "flex w-full cursor-pointer justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500">
      Do not have an account?
      <%= link_to 'Sign up', new_user_registration_path, class: "font-semibold leading-6 text-red-600 hover:text-red-500" %>
    </p>
  </div>
</div>
