<div class="h-full bg-gray-100">

  <main class="mx-auto max-w-7xl pb-10 lg:px-8 lg:py-12">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
      <%= render "profiles/sidebar" %>
      <!-- Payment details -->
      <div class="space-y-6 sm:px-6 lg:col-span-9 lg:px-0">
        <section aria-labelledby="payment-details-heading">
          <%= form_with model: @user, scope: :password, local: true, url: password_path(@user) do |f| %>
            <div class="shadow sm:overflow-hidden sm:rounded-md">
              <div class="bg-white px-4 py-6 sm:p-6">
                <div>
                  <h2 id="payment-details-heading" class="text-lg font-medium leading-6 text-gray-900">Update password</h2>
                  <p class="mt-1 text-sm text-gray-500">Update your password. Make sure it's at least 8 characters, contains a number and a special character.</p>
                </div>

                <div class="mt-6 grid grid-cols-4 gap-6">
                  <div class="col-span-4 sm:col-span-2">
                    <%= f.label :verify_password, "Current Password", class: "block text-sm font-medium leading-6 text-gray-900" %>
                    <%= f.password_field :verify_password, autocomplete: "off", aria: {label: 'Current Password'}, class: "mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
                    <div class="">
                    <div class="mx-2">
                      <%= f.label :password, "New Password", class: "block text-sm font-medium leading-6 text-gray-900 mt-3" %>
                      <%= f.password_field :password, aria: {label: 'New Password'}, class: "mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
                    </div>

                    <div class="mx-2">
                      <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium leading-6 text-gray-900 mt-3" %>
                      <%= f.password_field :password_confirmation, aria: {label: 'Confirm New Password'}, class: "mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-900 sm:text-sm sm:leading-6" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="bg-gray-50 px-4 py-3 mt-2 text-right sm:px-6">
                <button type="submit" class="inline-flex justify-center rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900">Save</button>
              </div>
            </div>
          <% end %>
        </section>
      </div>
    </div>
  </main>
</div>
