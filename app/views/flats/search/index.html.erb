<div class="container mx-auto mt-7 mb-4" >
  <div class="grid grid-cols-5 gap-4">
    <div class="col-span-2">
      <ul role="list" class="grid grid-cols-1 gap-x-2 gap-y-8 sm:grid-cols-3 sm:gap-x-3 lg:grid-cols-2 xl:gap-x-4 ul-list">
        <%= render partial: "flats/flat", collection: @flats, as: :flat %>
      </ul>
    </div>
    <div class="col-span-3">
      <div style="width: 100%; height: 900px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
