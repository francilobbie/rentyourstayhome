<div
  data-controller="share-modal"
  data-share-url="<%= url_for(only_path: false) %>"
  class=""
  >
  <div class="flex items-center">
    <div class="flex-none hover:bg-gray-100 rounded-full p-1 cursor-pointer" data-modal-target="closeButton">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </div>
  </div>
  <div class=" mt-4 ">
    <h2 class="grow pr-7 text-2xl font-semibold leading-6 text-gray-900" id="modal-title">Share this place</h2>
  </div>
  <div class=" flex items-center">
    <div class=" mt-5 w-16 h-16 ">
      <%= cl_image_tag content_params[:flat].default_image.key, class: " rounded-lg h-full w-full object-cover object-center " %>
    </div>
    <div class="mt-5 ml-4">
      <p class=" mt-2 text-base flex items-center ">
        Apartment in <span class=" ml-1 "> <%= content_params[:flat].address_by_coordinates_for_share %></span>
        <span class="flat_show_dot flex items-center mx-2 justify-center  w-1.5">●</span>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 inline-block relative" style="bottom: 2px">
            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
          </svg>
          <%= content_params[:flat].average_rating.to_f.round(2) %>
        </span>
        <span class="flat_show_dot flex items-center mx-2 justify-center  w-1.5">●</span>
      </p>
    </div>
  </div>
  <div>
    <ul role="list"
      class=" mt-8 grid grid-cols-1 gap-x-3 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-2 xl:gap-x-8 "
      >
        <li class="relative" >
          <div
            class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center "
            data-action="click->share-modal#copyLink"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" style="display: block; height: 32px; width: 32px; fill: currentcolor;" aria-hidden="true" role="presentation" focusable="false"><path d="M25 5a4 4 0 0 1 4 4v17a5 5 0 0 1-5 5H12a5 5 0 0 1-5-5V10a5 5 0 0 1 5-5h13zm0 2H12a3 3 0 0 0-3 3v16a3 3 0 0 0 3 3h12a3 3 0 0 0 3-3V9a2 2 0 0 0-2-2zm-3-6v2H11a6 6 0 0 0-5.996 5.775L5 9v13H3V9a8 8 0 0 1 7.75-7.996L11 1h11z"></path>
            </svg>
            <p class="text-base p-6 font-semibold">Copy link</p>
          </div>
        </li>
        <li class="relative" >
          <div
            class="border border-solid cursor-pointer hover:bg-gray-100 rounded-xl border-gray-200 flex items-center justify-center "
            data-action="click->share-modal#sendByEmail"
          >
            <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" style="display: block; fill: none; height: 32px; width: 32px; stroke: currentcolor; stroke-width: 2px; overflow: visible;" aria-hidden="true" role="presentation" focusable="false"><g fill="none"><rect height="24" rx="4" width="28" x="2" y="4"></rect><path d="m3 6 10.416231 8.813734c1.4913834 1.2619398 3.6761546 1.2619398 5.167538 0l10.416231-8.813734"></path></g></svg>
            <p class="text-base p-6 font-semibold">Email</p>
          </div>
        </li>
    </ul>
  </div>
</div>
